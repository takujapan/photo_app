<% provide(:title, "Edit") %>

<% if @photo.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @photo.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @photo, local: true do |f| %>
        
        <div class="field">
          <%= f.label :image, "写真", class: "label" %>
          <%= f.attachment_field :image %>
        </div>
        
        <div class="field">
          <%= f.label :caption, "説明", class: "label" %>
          <%= f.text_area :caption, class: "input" %>
        </div>
        
        <%= f.submit "更新", class: "button is-default" %>
        
        <% end %>
      </div>
    </div>
  </div>
</section>
  
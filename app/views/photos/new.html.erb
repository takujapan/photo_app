<% provide(:title, "New") %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_with model: @photo do |f| %>
        <div class="field">
          <%= f.label :image, "写真", class: "label" %>
          <%= f.attachment_field :image %>
        </div>
        <div class="field">
          <%= f.label :caption, "説明", class: "label" %>
          <%= f.text_area :caption, class: "input" %>
        </div>
        <%= f.submit "投稿", class: "button is-default" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
  
  